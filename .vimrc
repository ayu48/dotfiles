"set runtimepath+=~/.vim_runtime
"execute pathogen#infect()

"color
"colorscheme solarized

"display
set encoding=utf-8
set cursorline
set number
syntax enable
set laststatus=2

"insert format
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smartindent

"search
set incsearch
set ignorecase
set smartcase
set wrapscan
set hlsearch

"sound
set noeb vb t_vb=
